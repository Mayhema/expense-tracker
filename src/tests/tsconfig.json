{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.test.ts",
    "**/*.cjs",
    "**/*.test.cjs",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
