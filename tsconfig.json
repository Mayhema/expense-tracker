{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "backend/**/*",
    "src/parsers/fileHandler.js",
    "src/core/appState.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
