{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Tool for tracking and analyzing expenses",
  "main": "src/main.js",
  "type": "module",
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/src/tests/**/*.[jt]s",
      "**/src/tests/**/*.[cm]js"
    ],
    "transform": {}
  },
  "scripts": {
    "start": "serve src",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs",
  "test:all": "npm test -- --runInBand",
  "test:ci": "npm test -- --runInBand --silent",
    "test:category": "node src/tests/categoryManager.test.js",
  "lint": "eslint --no-eslintrc -c .eslintrc.cjs \"src/**/*.js\"",
  "lint:fix": "eslint --no-eslintrc -c .eslintrc.cjs \"src/**/*.js\" --fix",
    "format": "prettier --write src/**/*.{js,html,css}",
    "build": "echo 'No build step required'",
    "ci": "npm run lint && npm run test:ci"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.4",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^26.1.0",
    "prettier": "^2.8.7",
    "serve": "^14.2.0"
  },
  "author": "",
  "license": "ISC",
  "keywords": []
}
